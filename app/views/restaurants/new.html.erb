<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <ul class="navbar-nav mr-auto navbar-dark bg-dark">
    <li class="navbar-brand"><h1 class="text-light">Restaurants</h1></li>
    <li class="nav-link"><%= link_to "All", restaurants_path, class: "btn btn-primary btn-lg"%></li>
    <li class="nav-link"><%= link_to "New one", new_restaurant_path, class: "btn btn-primary btn-lg"%></li>
  </ul>
</nav>

<div class="container">
  <h1>Create a new restaurant :</h1>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, collection: Restaurant::CAT %>
    <%= f.input :phone_number %>
    <%= f.submit class: "btn btn-primary"%>
    <%= link_to 'Back', restaurants_path, class: "btn btn-secondary" %>
  <% end %>
</div>
